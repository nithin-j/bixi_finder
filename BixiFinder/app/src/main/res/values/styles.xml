<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoTitleBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        ///To remove the default AppBar
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
    </style>

    <style name="CustomActivityTheme" parent="AppTheme.NoTitleBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_close_black_24dp</item>
    </style>

    <style parent="@android:style/Widget.Spinner" name="CustomerSpinnerTheme">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="CustomSwitchTheme" parent="AppTheme.NoTitleBar">
        <item name="colorControlActivated">#46bdbf</item>
        <item name="colorSwitchThumbNormal">#46bdbf</item>
        <item name="android:colorForeground">@color/primary</item>
    </style>

</resources>
